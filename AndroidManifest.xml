<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andrewovens.weeklybudget"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.andrewovens.weeklybudget.WeekActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.andrewovens.weeklybudget.FirstActivity"
            android:label="@string/title_activity_first" >
        </activity>
        <activity
            android:name="com.andrewovens.weeklybudget.NewBudgetActivity"
            android:label="@string/title_activity_new_budget"
            android:parentActivityName="com.andrewovens.weeklybudget.FirstActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.andrewovens.weeklybudget.FirstActivity" />
        </activity>
        <activity
            android:name="com.andrewovens.weeklybudget.JoinBudgetActivity"
            android:label="@string/title_activity_join_budget"
            android:parentActivityName="com.andrewovens.weeklybudget.FirstActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.andrewovens.weeklybudget.FirstActivity" />
        </activity>
        <activity
            android:name="com.andrewovens.weeklybudget.AddExpenseActivity"
            android:label="@string/title_activity_add_expense" >
        </activity>
    </application>

</manifest>
