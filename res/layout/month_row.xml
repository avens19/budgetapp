<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/border">

	<TextView
	    android:id="@+id/month_row_day1"
	    android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="-1dp"
        android:layout_marginRight="-1dp"
        android:gravity="center"
        android:padding="2dp"
	    android:layout_alignParentLeft="true"
        android:background="@drawable/border" />
	<TextView
	    android:id="@+id/month_row_day2"
	    android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="-1dp"
        android:layout_marginRight="-1dp"
        android:gravity="center"
        android:padding="2dp"
	    android:layout_toRightOf="@id/month_row_day1"
        android:background="@drawable/border" />
	<TextView
	    android:id="@+id/month_row_day3"
	    android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="-1dp"
        android:layout_marginRight="-1dp"
        android:gravity="center"
        android:padding="2dp"
	    android:layout_toRightOf="@id/month_row_day2"
        android:background="@drawable/border" />
	<TextView
	    android:id="@+id/month_row_day4"
	    android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="-1dp"
        android:layout_marginRight="-1dp"
        android:gravity="center"
        android:padding="2dp"
	    android:layout_toRightOf="@id/month_row_day3"
        android:background="@drawable/border" />
	<TextView
	    android:id="@+id/month_row_day5"
	    android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="-1dp"
        android:layout_marginRight="-1dp"
        android:gravity="center"
        android:padding="2dp"
	    android:layout_toRightOf="@id/month_row_day4"
        android:background="@drawable/border" />
	<TextView
	    android:id="@+id/month_row_day6"
	    android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="-1dp"
        android:layout_marginRight="-1dp"
        android:gravity="center"
        android:padding="2dp"
	    android:layout_toRightOf="@id/month_row_day5"
        android:background="@drawable/border" />
	<TextView
	    android:id="@+id/month_row_day7"
	    android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="-1dp"
        android:layout_marginRight="-1dp"
        android:gravity="center"
        android:padding="2dp"
	    android:layout_toRightOf="@id/month_row_day6"
        android:background="@drawable/border" />
	<TextView
	    android:id="@+id/month_row_total"
	    android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="-1dp"
        android:gravity="center_vertical|right"
        android:padding="2dp"
	    android:layout_toRightOf="@id/month_row_day7"
	    android:layout_alignParentRight="true"
        android:background="@drawable/border" />

</RelativeLayout>